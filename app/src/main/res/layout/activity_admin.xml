<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <Button
        android:id="@+id/admin_log_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Admin"
                android:fontFamily="@font/poppins_bold"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/admin_generate_report_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_textbox"
                android:textSize="15dp"
                android:text="Generate Report"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/admin_update_categories_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_textbox"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Update\nCategories"
                    android:textSize="10dp"
                    android:layout_marginRight="10dp"
                    app:backgroundTint="#FFC107"/>
                <Button
                    android:id="@+id/admin_update_products_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_textbox"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Update\nProducts"
                    android:textSize="10dp"
                    android:layout_marginRight="10dp"
                    app:backgroundTint="#FF9800"/>

                <Button
                    android:id="@+id/admin_visualization_charts_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="end"
                    android:background="@drawable/rounded_textbox"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Visualization\nCharts"
                    android:textSize="10dp"
                    app:backgroundTint="#FFC107"/>

            </LinearLayout>

            <Button
                android:id="@+id/admin_feedback_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_textbox"
                android:textSize="15dp"
                android:text="Feedback"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>